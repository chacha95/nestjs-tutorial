generator client {
  provider = "prisma-client-js"
}

generator dbml {
  provider = "prisma-dbml-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id
  email String  @unique
  name  String?
  Post  Post[]
}

model Post {
  userId  String
  id      String  @id
  title   String  @unique
  content String?
  user    User    @relation(fields: [userId], references: [id])
}
